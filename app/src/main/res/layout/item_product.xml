<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewProductId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewProductCheckCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Count"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewProductProductCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Count"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewProductPurchasePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Price"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewProductSalesPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales Price"
        android:textSize="18sp"
        android:textStyle="bold"
        />



</LinearLayout>
